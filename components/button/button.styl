@import "../../styles/sandlestrapFW";

ss-button	
	display inline
	
	button
		background darkGrey
		border none
		border-radius 4px
		color white
		cursor pointer
		display inline
		transition background-color 200ms ease-out
		padding 4px 8px 5px 8px

		// Really mozilla this was the problem?!?
		&::-moz-focus-inner
			border 0
			padding 0
			margin 0

		&:hover
			background darken(darkGrey, 10%)

		&:active
			background darken(darkGrey, 15%)

		&:focus
			outline 0
			box-shadow 0 0 2px 1px highlight

	button.submit
		background green
		
		&:hover
			background darken(green, 10%)

		&:active
			background darken(green, 15%)

	button.cancel
		background red
		
		&:hover
			background darken(red, 10%)

		&:active
			background darken(red, 15%)
