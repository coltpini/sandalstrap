@import "vars"
@import "mixins"

body 
	color black
	transition all 300ms ease-out
	width 100%
	background bg

body > content
	background bg
	color primary
	font 300 12px/14px 'Helvetica Neue', helvetica, sans-serif;

	> header 
		background lighten(primary, 20%)
		color bg
		padding 5px
		height 40px
		box-sizing border-box

		h1
			position fixed
			z-index layer2
			top 0
			left 0
			padding-left 40px
			padding-top 10px
			background rgba(lighten(primary, 20%),80%)
			height 40px
			box-sizing border-box
			width 100%

	> article
		padding 15px

h1
	font-size 18px
	font-weight 500
	line-height 20px

h2 
	font-size 16px
	font-weight 400
	line-height 18px	
	border-bottom 1px solid primary
	margin 10px 0px

h3 
	font-size 14px
	font-weight 300
	line-height 16px
	margin 10px 0 0px 0

p
	margin-bottom 5px

body.menuOpen
	width 70%
	overflow auto
    
ss-annotate {
    position fixed
    bottom 0
    left 0
    width 100%
    box-sizing border-box
}

ss-menu
	font-size 16px
	line-height 18px
	color primary
	display inline-block

	.navButton
		position fixed
		z-index layer3
		top 5px
		left 9px

	nav
		padding-top 40px

		content > ul > li:first-child
			border-top 1px solid darken(primary,20%)

body > content > section
	padding 15px